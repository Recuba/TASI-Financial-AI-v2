# =============================================================================
# Venna AI - Streamlit Secrets Configuration
# =============================================================================
# Copy this file to secrets.toml and fill in your actual values
# For Streamlit Cloud: Add these secrets in the app settings dashboard
# =============================================================================

[database]
# PostgreSQL Connection URL
# For local development: postgresql://user:password@localhost:5432/dbname
# For Neon (recommended): postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
# For other cloud PostgreSQL: postgresql://user:password@host:port/dbname?sslmode=require
url = "postgresql://user:password@host:port/dbname"

[openrouter]
# OpenRouter API Key for LLM access (Gemini Flash 2.5)
# Get your key from: https://openrouter.ai/keys
api_key = "sk-or-v1-your-openrouter-api-key-here"

# Optional: Specify a different model
# model = "google/gemini-2.5-flash"

[app]
# Optional: App-level settings
# debug = false
# max_results = 50
